<!--suppress XmlUnboundNsPrefix -->
<idea-plugin version="2">
  <id>uk.co.reecedunn.intellij.plugin.marklogic</id>
  <name>marklogic-intellij-plugin</name>
  <version>VERSION</version>
  <vendor email="msclrhd@gmail.com" url="http://reecedunn.co.uk">Reece H. Dunn</vendor>

  <description><![CDATA[
    <p>Supports running and profiling the following query types on MarkLogic:</p>
    <ol>
      <li>XQuery</li>
      <li>Server-side JavaScript (MarkLogic 8 or later)</li>
      <li>SQL (MarkLogic 8 or later, run only)</li>
      <li>SPARQL Query (MarkLogic 7 or later, run only)</li>
      <li>SPARQL Update (MarkLogic 8 or later, run only)</li>
    </ol>
  ]]></description>

  <change-notes><![CDATA[
    <h3>Release 0.1:</h3>
    <ol>
      <li>Support for running and profiling XQuery, JavaScript, SQL and SPARQL queries.</li>
    </ol>
  ]]></change-notes>

  <idea-version since-build="171"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <executor implementation="uk.co.reecedunn.intellij.plugin.marklogic.ui.executors.ProfileExecutor"/>
    <configurationType implementation="uk.co.reecedunn.intellij.plugin.marklogic.ui.configuration.MarkLogicConfigurationType"/>
    <programRunner implementation="uk.co.reecedunn.intellij.plugin.marklogic.ui.runner.MarkLogicProgramRunner"/>

    <toolWindow id="MarkLogic Log View" anchor="bottom" secondary="true" icon="/icons/marklogic.png" factoryClass="uk.co.reecedunn.intellij.plugin.marklogic.ui.logview.MarkLogicLogViewFactory"/>

    <projectService serviceInterface="uk.co.reecedunn.intellij.plugin.marklogic.ui.settings.MarkLogicProjectSettings"
                    serviceImplementation="uk.co.reecedunn.intellij.plugin.marklogic.ui.settings.MarkLogicProjectSettings"/>
    <projectConfigurable groupId="tools" displayName="MarkLogic" instance="uk.co.reecedunn.intellij.plugin.marklogic.ui.settings.MarkLogicProjectSettingsConfigurable"/>
  </extensions>
</idea-plugin>
